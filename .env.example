# Environment
NODE_ENV=development

# API Configuration
API_PORT=8000
API_BASE_URL=http://localhost:8000
WEB_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://realsync:realsync@localhost:5432/realsync
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=realsync-documents-dev
AWS_S3_REGION=us-east-1

# Twilio (WhatsApp/SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_WHATSAPP_NUMBER=whatsapp:+15551234567

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@realsync.pe
SENDGRID_FROM_NAME=RealSync

# OpenAI (AI Features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Anthropic Claude (Alternative AI)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS_AUTHENTICATED=1000
RATE_LIMIT_MAX_REQUESTS_PUBLIC=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# WebSocket
WEBSOCKET_PORT=8001

# Cron Jobs
ENABLE_CRON_JOBS=true
REMINDER_CRON_SCHEDULE=0 * * * *

# Feature Flags
FEATURE_AI_SUMMARIES=true
FEATURE_VIDEO_CALLS=false
FEATURE_ADVANCED_ANALYTICS=true

# Peru-Specific
DEFAULT_TIMEZONE=America/Lima
DEFAULT_CURRENCY=PEN
DEFAULT_LANGUAGE=es-PE

# API Keys for External Services
SUNARP_API_KEY=
GOOGLE_MAPS_API_KEY=
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
